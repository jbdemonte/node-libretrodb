{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "ES2020",
    "sourceMap": false,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}
